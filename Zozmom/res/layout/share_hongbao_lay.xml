<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10" >

        <TextView
            android:id="@+id/hongbao_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发红包"
            android:textColor="@color/good_message_textcolors"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/share_hongbao_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x12"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y17"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/wechat_hongbaobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/wechat" />

        <ImageButton
            android:id="@+id/friends_hongbaobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/friends" />

        <ImageButton
            android:id="@+id/qq_hongbaobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/qq" />

        <ImageButton
            android:id="@+id/qq_kj_hongbaobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/qq_kj" />

        <ImageButton
            android:id="@+id/weibo_hongbaobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick"
            android:visibility="gone"
            android:src="@drawable/weibo" />
    </LinearLayout>

</LinearLayout>