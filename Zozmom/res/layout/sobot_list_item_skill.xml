<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sobot_item_skill_selector"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="0.1dp"
    android:visibility="invisible"
    android:id="@+id/sobot_ll_skill"
    android:paddingRight="0.1dp" >

    <TextView
        android:id="@+id/sobot_tv_skill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="其他"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sobot_text_font_small_16sp" />

    <TextView
        android:id="@+id/sobot_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sobot_tv_skill_name"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="5dp"
        android:text="留言"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#b5b5b5"
        android:textSize="@dimen/sobot_listview_remind_text_size" />

</LinearLayout>