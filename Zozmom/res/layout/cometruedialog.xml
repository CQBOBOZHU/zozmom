<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <FrameLayout
        android:layout_width="@dimen/x286"
        android:layout_height="@dimen/y236" >

        <ImageView
            android:layout_width="@dimen/x286"
            android:layout_height="@dimen/y236"
            android:src="@drawable/tan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="逐梦"
                    android:textSize="@dimen/sizeeight"
                    android:textColor="@color/white" />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜您获得"
                    android:textSize="@dimen/sizefour"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="第五期"
                android:textSize="@dimen/sizetwo"
                android:textColor="@color/btn_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="iPhone 6s plus (64G)"
                 android:textSize="@dimen/sizeeight"
                android:textColor="@color/btn_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="@dimen/x95"
                    android:layout_height="@dimen/y19"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@drawable/btn_background_red"
                    android:text="查看"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="@dimen/x95"
                    android:layout_height="@dimen/y19"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/btn_background_y"
                    android:text="分享"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>