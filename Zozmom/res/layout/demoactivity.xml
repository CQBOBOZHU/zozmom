<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
     <Button
         android:id="@+id/yanzhengma"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="验证吗" />
     <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="post"
            android:text="第一次验证" />
     <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="postByToken"
            android:text="Post" />
     <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="get"
            android:text="Get" />
     <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="getversion"
            android:text="获取最新版本号" />
     <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="download"
            android:text="下载" />
     <ProgressBar 
         android:id="@+id/progressbar"
         android:layout_width="match_parent"
         android:layout_height="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         style="@style/mProgress_horizontal"
         />
     
       <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadimage"
            android:text="图片" />
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/add"
           android:id="@+id/downloadimage"
           />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="notificationMethod"
            android:text="默认通知(已被抛弃，但是通用)" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="notificationMethod"
            android:text="默认通知(API11之后可用)" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="notificationMethod"
            android:text="默认通知(API16之后可用)" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="notificationMethod"
            android:text="自定义通知" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="notificationMethod"
            android:text="清除通知" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="download"
            android:text="下载" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/mProgress_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/CuExpandableListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:divider="@null"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="request"
            android:text="请求b数据" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="request1"
            android:text="请求s数据" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="shareWeixin"
            android:text="分享文字到微信" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="shareCircle"
            android:text="分享文字到朋友圈" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="shareQQ"
            android:text="分享到QQ" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="shareQzone"
            android:text="分享到QQ空间" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loginQQ"
            android:text="QQ登录" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loginWeixin"
            android:text="微信授权" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="分享到朋友圈" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/demotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111" />

        <TextView
            android:id="@+id/demotext1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/corner" />

        <ImageView
            android:id="@+id/demoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dpbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="DP转化PX" />

        <Button
            android:id="@+id/pxbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="PX转化DP" />

        <Button
            android:id="@+id/demobtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="查询" />

        <Button
            android:id="@+id/demobtn1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="插入" />

        <Button
            android:id="@+id/demobtn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="删除所有" />

        <Button
            android:id="@+id/demobtn3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="删除一个" />

        <Button
            android:id="@+id/demobtn4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="修改" />

        <Button
            android:id="@+id/demobtn5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="查找byid" />

        <Button
            android:id="@+id/demobtn6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="增加字段" />

        <com.zozmom.cuview.CityPicker
            android:id="@+id/citypicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>