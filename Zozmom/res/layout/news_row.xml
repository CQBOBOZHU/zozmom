<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:id="@+id/news_back"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#eee"
        android:tag="news_back" >

        <Button
            android:id="@+id/example_row_b_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null" />

        <Button
            android:id="@+id/example_row_b_action_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null" />

        <Button
            android:id="@+id/example_row_b_action_dd"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red"
            android:text="删除" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/news_front"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/item_selector"
        android:tag="news_front" >

        <ImageView
            android:id="@+id/left_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/pic_loading" />

        <TextView
            android:id="@+id/left_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_imageview"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/left_imageview"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:text="11111111111"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/left_oth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
             android:lines="1"
            android:layout_toRightOf="@+id/left_imageview"
            android:ellipsize="end"
            android:maxEms="10"
            android:text="777777777778888888"
            android:textColor="@color/good_message_textcolors"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/left_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/left_imageview"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/left_imageview"
            android:ellipsize="end"
             android:lines="1"
            android:maxEms="10"
            android:text="@string/buytimes"
            android:textColor="@color/good_message_textcolors"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/left_removebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <EditText
                android:id="@+id/but_times_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numeric="integer"
                android:singleLine="true"
                android:text="1" />

            <Button
                android:id="@+id/left_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>