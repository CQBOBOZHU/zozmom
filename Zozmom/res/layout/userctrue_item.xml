<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y5"
        android:paddingBottom="@dimen/y5"
        android:background="@drawable/item_selector"
        android:descendantFocusability="blocksDescendants" >

        <RelativeLayout
            android:layout_width="@dimen/y67"
            android:layout_marginLeft="@dimen/x12"
            android:layout_height="@dimen/y67" >

            <ImageView
                android:id="@+id/good_imageview"
                android:layout_width="@dimen/y67"
                android:layout_height="@dimen/y67"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_loading" />

            <ImageView
                android:id="@+id/good_ucdisview"
                android:layout_width="@dimen/y22"
                android:layout_height="@dimen/y22"
                android:layout_alignLeft="@+id/good_imageview"
                android:layout_alignTop="@+id/good_imageview"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/ten_yuan" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x6"
            android:weightSum="1" >

            <TextView
                android:id="@+id/good_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/x15"
                android:layout_weight="0.15"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/index_btn"
                android:textSize="@dimen/sizefour" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y1"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/allcount"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:id="@+id/good_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x4"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y1"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/issueid"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:id="@+id/good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x4"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/index_btn_chang"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/count_hint"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y1"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/buycount"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:id="@+id/good_c_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x4"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/add_hint"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y1"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="@string/opentime"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />

                <TextView
                    android:id="@+id/good_c_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x4"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/grid_text_color"
                    android:textSize="@dimen/sizetwo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/number_textview"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y21"
        android:layout_below="@+id/message_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y5"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y1"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>