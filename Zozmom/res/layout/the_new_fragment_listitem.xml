<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/y6"
        android:weightSum="1" >

        <FrameLayout
            android:layout_width="@dimen/x129"
            android:layout_height="@dimen/x129"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/gooditem_imageview"
                android:layout_width="@dimen/x129"
                android:layout_height="@dimen/x129"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/gooditem_disimageview"
                android:layout_width="@dimen/x42"
                android:layout_height="@dimen/x42"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ten_yuan"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/good_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.15"
            android:lines="2"
            android:maxEms="12"
            android:textColor="@color/index_btn"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/good_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="期号: "
            android:textColor="@color/grid_text_color"
            android:textSize="@dimen/sizethree" />

        <TextView
            android:id="@+id/good_value_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="获得者:"
            android:textColor="@color/grid_text_color"
            android:textSize="@dimen/sizethree" />

        <TextView
            android:id="@+id/good_c_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="参与人次:"
            android:textColor="@color/grid_text_color"
            android:textSize="@dimen/sizethree" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="揭晓时间:"
                android:textColor="@color/grid_text_color"
                android:textSize="@dimen/sizethree" />

            <TextView
                android:id="@+id/good_c_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/index_btn_chang"
                android:textSize="@dimen/sizethree" />
        </LinearLayout>

        <TextView
            android:id="@+id/number_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y17"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sizethree" />
    </LinearLayout>

</RelativeLayout>