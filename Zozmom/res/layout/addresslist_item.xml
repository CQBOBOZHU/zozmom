<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingBottom="@dimen/y8"
    android:splitMotionEvents="false"
    android:paddingTop="@dimen/y4" >

    <TextView
        android:id="@+id/address_item_nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:textColor="@color/good_message_textcolors"
        android:textSize="@dimen/sizefour" />

    <TextView
        android:id="@+id/address_item_phoneview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x12"
        android:textColor="@color/good_message_textcolors"
        android:textSize="@dimen/sizefour" />

    <TextView
        android:id="@+id/address_item_messageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_item_nameview"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/y8"
        android:gravity="top|left"
        android:lineSpacingExtra="@dimen/y3"
        android:maxLines="2"
        android:textColor="@color/good_message_textcolors"
        android:textSize="@dimen/sizefour" />

    <include
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/address_item_messageview"
        android:layout_marginTop="@dimen/y6"
        layout="@layout/line_h" />
    <Button 
        android:id="@+id/choose_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择地址"
        android:drawableLeft="@drawable/ricle_no"
        android:layout_below="@+id/line"
        android:background="@null"
         android:textSize="@dimen/sizefour"
         android:drawablePadding="@dimen/x5"
          android:layout_marginTop="@dimen/y4"
        android:textColor="@color/good_message_textcolors"
         android:layout_marginLeft="@dimen/x12"
        />

    <Button
        android:id="@+id/updata_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginTop="@dimen/y4"
        android:layout_toLeftOf="@+id/addressdelete_btn"
        android:background="@drawable/item_selector"
        android:focusable="false"
        android:text="@string/edit"
        android:textColor="@color/background"
        android:textSize="@dimen/sizefour" />

    <Button
        android:id="@+id/addressdelete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/y4"
        android:background="@drawable/item_selector"
        android:focusable="false"
        android:text="@string/delete"
        android:textColor="@color/background"
        android:textSize="@dimen/sizefour" />

</RelativeLayout>