    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/btn_red"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/btn_red"
                android:startColor="@color/btn_red"
                android:type="linear" />

            <!-- 应该是圆角 -->
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>