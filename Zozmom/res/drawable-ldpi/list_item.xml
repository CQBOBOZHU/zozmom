<?xml version="1.0" encoding="utf-8"?>
<!-- 缺上的 背景   边框为一条线的 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/line" />

            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#ffffff" />


            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>